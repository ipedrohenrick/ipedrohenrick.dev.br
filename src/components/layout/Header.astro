---
import { menuLinks, siteConfig } from "@/site.config"
---

<header>
  <div class="flex flex-col-reverse mt-2 mb-4 justify-between sm:mt-4 items-center sm:flex-row">
    <div class="mt-2 sm:mt-0">
      <a href="/" class="text-3xl font-title font-semibold">{siteConfig.SiteName}</a>
    </div>
    <nav class="divide-x">
      {
        menuLinks.map(link => (
          <a href={link.path} class="px-1.5 box-border font-semibold">{link.title}</a>
        ))
      }
    </nav>
  </div>
</header>
