---
import Head from "@/components/Head.astro";
import { siteConfig } from "@/site.config";

import "../styles/global.css";

interface Props {
  title: string
}

const { title } = Astro.props;
---

<html lang={siteConfig.Lang}>
	<head>
    <Head title={title} />
	</head>
  <body class="bg-background text-foreground border-t-4">
    <slot></slot>
	</body>
</html>
